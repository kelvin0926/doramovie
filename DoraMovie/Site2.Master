    <strong><%#Eval("title").ToString().Length > 30 ? Eval("title").ToString().Remove(30) : Eval("title").ToString()%></strong>
    <time pubdate="pubdate"><%#times()%></time>
  </a></div>
  </ItemTemplate>
  </asp:Repeater>
